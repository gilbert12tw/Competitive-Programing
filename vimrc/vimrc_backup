let mapleader = ','
set ai
set sts=4
set tabstop=4
set shiftwidth=4
set expandtab
set autowrite
set smartindent
set mouse=a
set showmode
set showcmd
set whichwrap+=<,>,[,]
set timeoutlen=300

" au FileType cpp :r /Users/littlepants/CP/codebook/default.cpp<CR>
nnoremap d<CR> :r /Users/littlepants/CP/codebook/default.cpp<CR>
nnoremap c<CR> :r /Users/littlepants/CP/codebook/
nnoremap y<CR> ggvG$"*y<CR>
nnoremap <C-\> :w <CR> :!clear && g++ -std=c++17 -O2 -Wall -g % && ./a.out<CR>
map<F12> :!clear && python3 %<CR>
